@model IEnumerable<CinemaApplication.Models.factures>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>

    <button class="btn btn-outline-success"> @Html.ActionLink("Generer facture", "calculFacture")</button>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.somme)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.somme)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
            @Html.ActionLink("Details", "Details", new { id = item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.id })|
            @Html.ActionLink("Payer", "Pay", new { id = item.id })
        </td>
    </tr>
}

</table>
